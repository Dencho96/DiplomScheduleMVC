@model DiplomScheduleMVC.Models.Schedule

@{
    ViewBag.Title = "Видалити запис";
}

<h2>Видалити запис</h2>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Розклад</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Аудиторія
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Auditory.AuditoryID)
        </dd>

        <dt>
            День
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day.DayName)
        </dd>

        <dt>
            Група
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group.GroupName)
        </dd>

        <dt>
            Пара
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pair.PairID)
        </dd>

        <dt>
            Предмет
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>

        <dt>
            Викладач
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.TeacherName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутись", "Index")
        </div>
    }
</div>
