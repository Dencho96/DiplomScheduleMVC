
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <h2>Login</h2>
            @if (ViewBag.InvalidParameters != null)
            {
                <div class="alert alert-danger">You've entered wrong username or password. Please, check</div>
            }
            @using (Html.BeginForm())
            {
                @Html.Label("Username", new { htmlAttributes = new { @class = "form-control" } })<br />
                @Html.Editor("username", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Invalid username", null, new { @class = "alert-danger" })<br /><br />
                @Html.Label("Password", new { htmlAttributes = new { @class = "form-control" } })<br />
                @Html.Password("password")
                @Html.ValidationMessage("Invalid password", null, new { @class = "alert-danger" })<br />

                <p>
                    <button type="submit" class="btn btn-info">Log In</button>
                </p>

            }
        </div>
    </div>
</div>